{
  "name": "@ukis/core-ui",
  "version": "0.0.0-PLACEHOLDER",
  "main": "src/public_api",
  "schematics": "./schematics/collection.json",
  "scripts": {
    "schematics:build": "tsc -p tsconfig.schematics.json",
    "schematics:copy:collection": "cpx schematics/collection.json ../../dist/core-ui/schematics/",
    "schematics:copy:schemas": "cpx schematics/**/schema.json ../../dist/core-ui/schematics/",
    "schematics:copy:files": "cpx schematics/*/files/** ../../dist/core-ui/schematics/",
    "schematics:copy:alert": "cpx src/lib/global-alert/** ../../dist/core-ui/schematics/ng-add/files/src/app/components/global-alert/",
    "schematics:copy:progress": "cpx src/lib/global-progress/** ../../dist/core-ui/schematics/ng-add/files/src/app/components/global-progress/",
    "postschematics:build": "npm run schematics:copy:collection && npm run schematics:copy:schemas && npm run schematics:copy:files && npm run schematics:copy:alert && npm run schematics:copy:progress",
    "schematics:test": "npm run schematics:build && jasmine ../../dist/core-ui/schematics/**/*_spec.js"
  },
  "keywords": [
    "schematics",
    "@ukis",
    "core-ui"
  ],
  "ng-add": {
    "save": false
  },
  "dependencies": {
    "@angular-devkit/core": "^8.3.22",
    "@angular-devkit/schematics": "^8.3.22",
    "@schematics/angular": "^8.3.22"
  },
  "devDependencies": {
    "@types/jasmine": "^3.3.9",
    "@types/node": "^8.0.31",
    "cpx": "^1.5.0",
    "jasmine": "^3.3.1",
    "typescript": "~3.5.3"
  },
  "peerDependencies": {
    "@angular/common": "~8.2.10",
    "@angular/core": "~8.2.10",
    "@angular/forms": "~8.2.10",
    "@clr/angular": "^2.2.2",
    "@clr/icons": "^2.2.2",
    "@clr/ui": "^2.2.2",
    "rxjs": "~6.5.3"
  }
}
