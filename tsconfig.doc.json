{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@dlr-eoc/*": [
        "dist/*",
        "projects/*"
      ]
    }
  },
  "include": [
    "projects/**/*.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "node_modules/",
    "projects/demo-maps/**/*",
    "projects/demo-auth/**/*",
  ]
}
